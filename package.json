{
  "name": "@nanostores/persistent",
  "version": "0.9.0",
  "description": "A store for Nano Stores state manager to keep data in localStorage",
  "keywords": [
    "nano",
    "persistent",
    "react",
    "preact",
    "vue",
    "svelte",
    "store",
    "localStorage",
    "cross-tab"
  ],
  "scripts": {
    "unit": "tsm node_modules/uvu/bin.js . '(atom|map)\\.test\\.ts$' && tsm ./test/ssr.test.ts",
    "test:build": "vite build ./demo",
    "test:lint": "eslint .",
    "test:coverage": "c8 pnpm unit",
    "test:types": "check-dts",
    "test:size": "size-limit",
    "test": "pnpm run /^test:/",
    "start": "pnpm run test:build && vite preview ./demo"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/persistent",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^16.0.0 || ^18.0.0 || >=20.0.0"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ai"
    }
  ],
  "peerDependencies": {
    "nanostores": "^0.9.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^50.0.0",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "c8": "^7.13.0",
    "check-dts": "^0.7.2",
    "clean-publish": "^4.2.0",
    "eslint": "^8.41.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "happy-dom": "^9.20.3",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.9.0",
    "size-limit": "^8.2.4",
    "tsm": "^2.3.0",
    "typescript": "^5.0.4",
    "uvu": "^0.5.6",
    "vite": "^4.4.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "reporter": "lcov",
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "consistent-return": "off"
    },
    "overrides": [
      {
        "files": [
          "demo/*.ts"
        ],
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "**/errors.ts",
    "dist/"
  ],
  "size-limit": [
    {
      "name": "Atom",
      "import": {
        "./index.js": "{ persistentAtom }"
      },
      "limit": "359 B"
    },
    {
      "name": "Map",
      "import": {
        "./index.js": "{ persistentMap }"
      },
      "limit": "488 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
